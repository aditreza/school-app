  <link rel="stylesheet" href="../../assets/style/custom.css" type="text/css">
  <title><%=title%></title>
</head>
<body>

  <div style="text-align: center; margin-top:22px;">
    <p class="title is-2">Edit Teacher</p>
    <p class="subtitle is-5">update <%= data_TeachersToEjs.first_name %> <%= data_TeachersToEjs.last_name %> detail</p>
  </div>

  <div style="margin:auto; width: 50%;">
    <div style="margin-top: 10%;">

      <form action="/teacher/edit/<%= data_TeachersToEjs.id %>" method="post">
        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <input class="input is-medium" type="text" placeholder="First Name" name="first_name" value="<%= data_TeachersToEjs.first_name %>">
            <span class="icon is-small is-left">
              <i class="fa fa-user"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <input class="input is-medium" type="text" placeholder="Last Name" name="last_name" value="<%= data_TeachersToEjs.last_name %>">
            <span class="icon is-small is-left">
              <i class="fa fa-user"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <input class="input is-medium" type="email" placeholder="Email" name="email" value="<%= data_TeachersToEjs.email %>">
            <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Subject</label>
          </div>
          <div class="field-body" style="margin-right:3%;">
            <div class="field ">
              <div class="control">
                <div class="select is-fullwidth">
                  <select name="subject_name">
                    <% for(let i=0; i<data_SubjectToEjs.length; i++) {%>
                    <option value="<%=data_SubjectToEjs[i].id%>"><%=data_SubjectToEjs[i].subject_name%></option>
                    <%}%>
                  </select>
                </div>
              </div>
            </div>
          </div>
          <input class="button is-success is-outlined is-medium" type="submit" value="Submit input">
        </div>


